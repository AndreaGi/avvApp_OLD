<!doctype html>
<html>
<head>
    <title>AvvAPP</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="../style/home.css">
    <link rel="stylesheet" href="../style/common.css">
    <style>
        body 		{ padding-top:80px; }
    </style>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-sm-9">
            <div class="col-sm-4">

            </div>
            <div class="col-sm-8" >
                <div class="infoBar">
                    <p>Bentornato, <% if (user.local.email) { %>
                        <%=user.local.email%>
                        <%}else{%>
                        <%=user.google.email%>
                        <%}%>
                    </p>
                    <p id="date"></p>
                </div>

                <% if(user.documents.length > 0){

                    var categories =  user.documents;
                %>

                <%}else{%>
                <p class="well" style="background-color: #f2dede;">Non ci sono pratiche da visualizzare</p>
                <%}%>

                <div id="menu">

                    <div class="settings">
                        <button type="button" class="btn btn-default" onclick="location.href='setup'" style="width: 25%;">
                            <h3><span class="fa fa-cogs"></span> Setup</h3>
                        </button>
                        <button type="button" class="btn btn-default" onclick="location.href='document'" style="width:73%; float: right">
                            <h3><span class="fa fa-file-text"></span> Aggiungi pratica</h3>
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var today = new Date();
    var dd = today.getDate();
    var mm = today.getMonth()+1; //January is 0!
    var yyyy = today.getFullYear();

    if(dd<10) {
        dd='0'+dd
    }

    if(mm<10) {
        mm='0'+mm
    }

    today = mm+'/'+dd+'/'+yyyy;
    $("#date").text(today);
</script>
</body>
</html>